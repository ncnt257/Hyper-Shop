                      <div class="products-sort-by mt-2 mt-lg-0"><strong>Sort by</strong>
                        <select name="sort-by" class="form-control sort-select">
                          <option value="Price">Price</option>
                          <option value="Name">Name</option>
                          <option value="PublishedDate">Published Date</option>
                        </select>
                        <span class="ml-1 sort-order">
                          <button class="btn btn-primary sort-order-button" id="order-asc">
                            <i class="bi bi-sort-down-alt"></i>
                          </button>
                          <button class="btn sort-order-button" id="order-desc">
                            <i class="bi bi-sort-down"></i></button
                        ></span>
                      </div>
                    </form>
                  </div>
                </div>
