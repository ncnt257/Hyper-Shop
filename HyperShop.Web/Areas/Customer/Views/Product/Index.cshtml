
@model ProductsPageVM
@{
    ViewData["Title"] = "Product";
}


<div id="all">
      <div id="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <!-- breadcrumb-->
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li aria-current="page" class="breadcrumb-item active">Ladies</li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-3">
              <!--
              *** MENUS AND FILTERS ***
              _________________________________________________________
              -->
              
              <div class="card sidebar-menu mb-4">
                <div class="card-header">
                  <h3 class="h4 card-title">Categories <a href="#" class="btn btn-sm btn-danger pull-right clear category-clear"><i class="fa fa-times-circle"></i> Clear</a></h3>
                </div>
                <div class="card-body">
                  <form class = "category-form">
                    <div class="form-group">
                      
                      @foreach (var item in Model.Categories)
                     {
                        <div class="checkbox">
                            <label>
                              <input type="checkbox" name="category" value="@item.Id"> @item.Name
                            </label>
                        </div>
                     }

                    </div>
                    <button class="btn btn-default btn-sm btn-primary filter category-filter"><i class="fa fa-pencil"></i> Apply</button>
                  </form>
                </div>
              </div>
              <div class="card sidebar-menu mb-4">
                <div class="card-header">
                  <h3 class="h4 card-title">Brands <a href="#" class="btn btn-sm btn-danger pull-right clear brand-clear"><i class="fa fa-times-circle"></i> Clear</a></h3>
                </div>
                <div class="card-body">
                  <form class = "brand-form">
                    <div class="form-group">
                      @foreach (var item in Model.Brands)
                     {
                        <div class="checkbox">
                            <label>
                              <input type="checkbox" value="@item.Id"> @item.Name
                            </label>
                        </div>
                     }
                    </div>
                    <button class="btn btn-default btn-sm btn-primary filter brand-filter"><i class="fa fa-pencil"></i> Apply</button>
                  </form>
                </div>
              </div>

              <div class="card sidebar-menu mb-4">
                <div class="card-header">
                  <h3 class="h4 card-title">Colors <a href="#" class="btn btn-sm btn-danger pull-right clear color-clear"><i class="fa fa-times-circle"></i> Clear</a></h3>
                </div>
                <div class="card-body">
                  <form class = "color-form">
                    <div class="form-group">
                      @foreach (var item in Model.Colors)
                     {
                        <div class="checkbox">
                            <label style="text-transform: capitalize">
                              <input type="checkbox" value="@item.Id"> @item.ColorValue
                            </label>
                        </div>
                     }
                    </div>
                    <button class="btn btn-default btn-sm btn-primary filter color-filter"><i class="fa fa-pencil"></i> Apply</button>
                  </form>
                </div>
              </div>

              <div class="card sidebar-menu mb-4">
                <div class="card-header">
                  <h3 class="h4 card-title">Shoes Height <a href="#" class="btn btn-sm btn-danger pull-right clear shoes-height-clear"><i class="fa fa-times-circle"></i> Clear</a></h3>
                </div>
                <div class="card-body">
                  <form class = "shoes-height-form">
                    <div class="form-group">
                      @foreach (var item in Model.ShoesHeightTypes)
                     {
                        <div class="checkbox">
                            <label style="text-transform: capitalize">
                              <input type="checkbox" value="@item"> @item
                            </label>
                        </div>
                     }
                    </div>
                    <button class="btn btn-default btn-sm btn-primary filter shoes-height-filter"><i class="fa fa-pencil"></i> Apply</button>
                  </form>
                </div>
              </div>

                <div class="card sidebar-menu mb-4">
                <div class="card-header">
                  <h3 class="h4 card-title">Closure Type <a href="#" class="btn btn-sm btn-danger pull-right clear closure-type-clear"><i class="fa fa-times-circle"></i> Clear</a></h3>
                </div>
                <div class="card-body">
                  <form class = "closure-type-form">
                    <div class="form-group">
                      @foreach (var item in Model.ClosureTypes)
                     {
                        <div class="checkbox">
                            <label style="text-transform: capitalize">
                              <input type="checkbox" value="@item"> @item
                            </label>
                        </div>
                     }
                    </div>
                    <button class="btn btn-default btn-sm btn-primary filter closure-type-filter"><i class="fa fa-pencil"></i> Apply</button>
                  </form>
                </div>
              </div>

                <div class="card sidebar-menu mb-4">
                <div class="card-header">
                  <h3 class="h4 card-title">Gender<a href="#" class="btn btn-sm btn-danger pull-right clear gender-clear"><i class="fa fa-times-circle"></i> Clear</a></h3>
                </div>
                <div class="card-body">
                  <form class = "gender-form"> 
                    <div class="form-group">
                      @foreach (var item in Model.Genders)
                     {
                        <div class="checkbox">
                            <label style="text-transform: capitalize">
                              <input type="checkbox" value="@item"> @item
                            </label>
                        </div>
                     }
                    </div>
                    <button class="btn btn-default btn-sm btn-primary filter gender-filter"><i class="fa fa-pencil"></i> Apply</button>
                  </form>
                </div>
              </div>
              <!-- *** MENUS AND FILTERS END ***-->
              <div class="banner"><a href="#"><img src="/img/banner.jpg" alt="sales 2014" class="img-fluid"></a></div>
            </div>
            <div class="col-lg-9">
              
              <div class="box info-bar">
                <div class="row">
                  <div class="col-md-12 col-lg-3 products-showing">Showing <strong>12</strong> of <strong>25</strong> products</div>
                  <div class="col-md-12 col-lg-9 products-number-sort">
                    <form class="form-inline d-block d-lg-flex justify-content-between flex-column flex-md-row">
