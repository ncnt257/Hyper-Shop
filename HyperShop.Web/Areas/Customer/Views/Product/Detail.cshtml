                  </div>
                  @*<div class="ribbon sale">
                    <div class="theribbon">SALE</div>
                    <div class="ribbon-background"></div>
                  </div>
                  <!-- /.ribbon-->
                  <div class="ribbon new">
                    <div class="theribbon">NEW</div>
                    <div class="ribbon-background"></div>
                  </div>
                  <!-- /.ribbon-->*@
                </div>
                <div class="col-md-6">
                  <div class="box">
                    <h1 class="text-center">@Model.Product.Name</h1>
                    <p class="goToDescription"><a href="#details" class="scroll-to">Scroll to product details, material &amp; care and sizing</a></p>
                    <p class="price">@Model.Product.Price.ToString("c")</p>
                    <p class="text-center buttons"><a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add to cart</a><a href="basket.html" class="btn btn-outline-primary"><i class="fa fa-heart"></i> Add to wishlist</a></p>
                    <div class = "color-pick">
                        <h3 class="mt-3">Choose Color</h3>
                    @for(int i=0;i< Model.Colors.Count;i++)
                    {
                        if (i == 0)
                        {
                            <label>
                                <input type="radio" name="product-color" checked value="@Model.Colors[i].ColorId">
                                <img src="@Model.Colors[i].PrimaryImage" width="50">
                            </label>           
                        }
                        else{
                            <label>
                            <input type="radio" name="product-color" value="@Model.Colors[i].ColorId">
                            <img src="@Model.Colors[i].PrimaryImage" width="50">
                        </label>  
                        
                        }           
                    }
                    </div>
                    <div  >
                        <h3 class="mt-3">Choose Size</h3>
                    </div>
                    <ul class="flex-container longhand size-pick">
                                @foreach (var item in Model.Sizes)
                                {
                                    <li class="flex-item"><input disabled id="@item.Id" type="radio" name="radio"><label class="size-label" for="@item.Id">@item.SizeValue</label></li>
                                }
                                </ul>
                            </div>
                <div data-slider-id="1" class="owl-thumbs">

                  </div>
                </div>
              </div>
              <div id="details" class="box">
                <p></p>
