@model IEnumerable<Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="all">
      <div id="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <!-- breadcrumb-->
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li aria-current="page" class="breadcrumb-item active">O  rders</li>
                </ol>
              </nav>
            </div>

            <div id="customer-orders" class="col-lg-12">
              <div class="box">
                <h1>Orders</h1>
                <hr>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Order</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>#@item.Id</th>
                                <td>@item.OrderDate.ToShortDateString()</td>
                                <td>@((item.TotalPrice+item.ShipCost).ToString("c"))</td>
                                @if(item.Status== HyperShop.Utility.SD.Status_Prepare)
                                {
                                    <td><span class="badge badge-info">@item.Status</span></td>
                                }
                                else if (item.Status== HyperShop.Utility.SD.Status_Delivering)
                                {
                                    <td><span class="badge badge-info">@item.Status</span></td>
                                }
                                else if (item.Status== HyperShop.Utility.SD.Status_Receive)
                                {
                                    <td><span class="badge badge-success">@item.Status</span></td>
                                }
                                else if (item.Status== HyperShop.Utility.SD.Status_Cancel)
                                {
                                    <td><span class="badge badge-danger">@item.Status</span></td>
                                }
                                <td><a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a></td>
                            </tr>
                        }
